<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/friendreq_accept_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/friendreq_decline_btn"
        android:backgroundTint="@android:color/holo_green_light"
        app:srcCompat="@drawable/check" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendreq_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/friendreq_single_name"
        android:layout_width="124dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="171dp"
        android:layout_toEndOf="@+id/friendreq_single_image"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/friendreq_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friendreq_single_name"
        android:layout_alignStart="@+id/friendreq_single_name"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:text="User Status" />

    <ImageButton
        android:id="@+id/friendreq_decline_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/friendreq_single_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        app:srcCompat="@drawable/clear" />


</RelativeLayout>